<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bignerdranch.android.locationtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MyTracks"
            android:label="LocationTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".NewTrackActivity">
        </activity>
        <activity android:name=".SettingsActivity">
        </activity>
        <activity android:name=".TrackDetailsActivity">
        </activity>
        <activity android:name=".AddLocationActivity">
        </activity>
    </application>

</manifest>